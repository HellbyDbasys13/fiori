<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    >
            <!-- <content> -->

            <HBox alignItems="Center" justifyContent="SpaceBetween">
                <Label
                    id="labelSimpleInput"
                    text="Simple Input"
                    class="control-lbl"
                />
                <Input
                    id="simpleInput"
                    placeholder="Enter text..."
                    liveChange=".onSimpleInputChange"
                    class="control control-input"
                />
            </HBox>

            <Label
                id="labelInputWithValue"
                text="Input with Value"
                class="control-lbl"
            />
            <Input
                id="inputWithValue"
                value="Predefined Value"
                liveChange=".onInputWithValueChange"
                class="control control-input"
            />

            <Label
                id="labelInputWithValueState"
                text="Input with Value State"
                class="control-lbl"
            />
            <Input
                id="inputWithValueState"
                value="Error Value"
                valueState="Error"
                valueStateText="Invalid input"
                liveChange=".onInputWithValueStateChange"
                class="control control-input"
            />

            <Label
                id="labelPasswordInput"
                text="Password Input"
                class="control-lbl"
            />
            <Input
                id="passwordInput"
                type="Password"
                placeholder="Enter password..."
                liveChange=".onPasswordInputChange"
                class="control control-input"
            />

            <Label
                id="labelNumberInput"
                text="Number Input"
                class="control-lbl"
            />
            <Input
                id="numberInput"
                type="Number"
                placeholder="Enter number..."
                liveChange=".onNumberInputChange"
                class="control control-input"
            />

            <Label
                id="labelDatePicker"
                text="Date Input"
                class="control-lbl"
            />
            <DatePicker
                id="datePicker"
                placeholder="Select date..."
                change=".onDatePickerChange"
                class="control control-input"
            />

            <Label
                id="labelTimePicker"
                text="Time Input"
                class="control-lbl"
            />
            <TimePicker
                id="timePicker"
                placeholder="Select time..."
                change=".onTimePickerChange"
                class="control control-input"
            />

            <Label
                id="labelDateTimePicker"
                text="DateTime Input"
                class="control-lbl"
            />
            <DateTimePicker
                id="dateTimePicker"
                placeholder="Select date and time..."
                change=".onDateTimePickerChange"
                class="control control-input"
            />

            <Label
                id="labelSelectInput"
                text="Select Input"
                class="control-lbl"
            />
            <Select
                id="selectInput"
                change=".onSelectChange"
                class="control control-input"
            >
            </Select>

            <Label
                id="labelMultiInput"
                text="Multi-Input"
                class="control-lbl"
            />
            <MultiInput
                id="multiInput1"
                showSuggestion="false"
                width="70%"
                showValueHelp="false"
                class="control control-input"
            />

            <Label
                id="labelTextArea"
                text="Text Area"
                class="control-lbl"
            />
            <TextArea
                id="textArea"
                placeholder="Enter text..."
                rows="4"
                liveChange=".onTextAreaChange"
                class="control control-txta"
            />

            <Label
                id="labelCheckBox"
                text="CheckBox"
                class="control-lbl"
            />
            <CheckBox
                id="checkBox"
                text="Accept terms and conditions"
                select=".onCheckBoxSelect"
                class="control control-chk"
            />

            <Label
                id="labelRadioButtonGroup"
                text="Radio Button Group"
                class="control-lbl"
            />
            <RadioButtonGroup
                id="radioButtonGroup"
                columns="3"
                select=".onRadioButtonSelect"
                class="control control-input"
            >
                <RadioButton
                    id="radioButton1"
                    text="Option 1"
                />
                <RadioButton
                    id="radioButton2"
                    text="Option 2"
                />
                <RadioButton
                    id="radioButton3"
                    text="Option 3"
                />
            </RadioButtonGroup>

            <Label
                id="labelSlider"
                text="Slider"
                class="control-lbl"
            />
            <Slider
                id="slider"
                min="0"
                max="100"
                value="50"
                change=".onSliderChange"
            />

            <Label
                id="labelSwitch"
                text="Switch"
                class="control-lbl"
            />
            <Switch
                id="switch"
                state="true"
                customTextOn="Yes"
                customTextOff="No"
                change=".onSwitchChange"
            />
        <!-- </content> -->
</core:FragmentDefinition>
