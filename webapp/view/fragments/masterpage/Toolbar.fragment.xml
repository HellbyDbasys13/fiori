<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc">
        <Toolbar>
                        <!-- Icono antes del nombre de la página -->
                        <Image
                            src="https://cdn-icons-png.flaticon.com/512/6171/6171586.png"
                            width="50px"
                            alt="Home Icon"
                            decorative="false" />
                        <Title text="SIAR - Sistema de administracion de riesgos" class="navtitle" />

                        <!-- Espaciador para empujar el contenido siguiente a la derecha -->
                        <ToolbarSpacer />

                        <!-- Imagen de notificación -->
                        <core:Icon
                                src="sap-icon://bell"
                                class="size1 navicon"
                                color="#04000d"
                                 >
                                <core:layoutData>
                                    <FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>

                        <core:Icon
                                src="sap-icon://message-popup"
                                class="size1 navicon"
                                color="#04000d"
                                 >
                                <core:layoutData>
                                    <FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>

                        <!-- Imagen de usuario -->
                            <core:Icon
                                id="userIcon"
                                src="sap-icon://customer"
                                class="size2 navicon"
                                color="#04000d"
                                press="onUserIconPress" >
                                <core:layoutData>
                                    <FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                    </Toolbar>

</core:FragmentDefinition>