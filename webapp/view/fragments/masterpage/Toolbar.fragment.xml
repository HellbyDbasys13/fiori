<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        >
        <Toolbar>
                        <!-- Icono antes del nombre de la página -->
                        <Image
                            src="https://www.gruposalinas.com/Content/iconos/LogoGS-main.svg"
                            alt="Home Icon"
                            decorative="false"
                            width="70px"
                            class="size1 navicon" />
                        <Title text="SISTEMA INTEGRAL DE ADMINISTRACIÓN DE RIESGOS" class="navtitle"/>

                        <!-- Espaciador para empujar el contenido siguiente a la derecha -->
                        <ToolbarSpacer />

                        <!-- Imagen de notificación -->
                        <core:Icon
                                src="sap-icon://bell"
                                class="size1 navicon"
                                 >
                                <core:layoutData>
                                    <FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>

                        <core:Icon
                                src="sap-icon://message-popup"
                                class="size1 navicon"
                                 >
                                <core:layoutData>
                                    <FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>

                        <!-- Imagen de usuario -->
                            <core:Icon
                                id="userIcon"
                                src="sap-icon://customer"
                                class="size2 navicon"
                                press="onUserIconPress" >
                                <core:layoutData>
                                    <FlexItemData growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                    </Toolbar>

</core:FragmentDefinition>