<mvc:View
    controllerName="siar.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <App>
        <pages>
            <Page>
                <customHeader>
                    <core:Fragment fragmentName="siar.view.fragments.masterpage.Toolbar" type="XML" class="customHeader"/>
                </customHeader>
                <content>
                    <SplitApp id="splitApp" class="customSlipApp">
                        <masterPages>
                            <Page id="menuPage" title="MenÃº">
                                <List id="menuList" items="{/menuItems}" class="customListMenu">
                                    <StandardListItem title="{title}" icon="{icon}" type="Navigation" press="onMenuItemPress"/>
                                </List>
                            </Page>
                        </masterPages>
                        <detailPages>
                            <Page id="homePage" title="Home">
                                <headerContent>
                                    <Text text="HOME"/>
                                </headerContent>
                                <content>
                                    <HBox class="customContent">
                                        <VBox>
                                            <core:Fragment fragmentName="siar.view.fragments.Home" type="XML" class="customContentPage"/>
                                        </VBox>
                                    </HBox>
                                </content>
                            </Page>
                            
                            <Page id="detailPage" title="Home > Detail">
                                <headerContent>
                                    <Text text="Detail"/>
                                </headerContent>
                                <content>
                                    <HBox class="customContent">
                                        <VBox>
                                            <core:Fragment fragmentName="siar.view.fragments.Detail" type="XML" class="customContentPage" />
                                        </VBox>
                                    </HBox>
                                </content>
                            </Page>
                            
                            <Page id="userPage" title="User">
                                <headerContent>
                                    <Text text="User" />
                                </headerContent>
                                <content>
                                    <HBox class="customContent">
                                        <VBox>
                                            <core:Fragment fragmentName="siar.view.fragments.User" type="XML" class="customContentPage" />
                                        </VBox>
                                    </HBox>
                                </content>
                            </Page>
                        </detailPages>
                    </SplitApp>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>


