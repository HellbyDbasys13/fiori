<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page title="Dynamic Cards">
        <content>
            <VBox id="cardContainer" class="sapUiSmallMargin">
                <items>
                    <List
                        items="{/cards}">
                        <items>
                            <CustomListItem>
                                <VBox>
                                    <Panel
                                        headerText="{title}">
                                        <content>
                                            <Image src="{imageSrc}" width="100px" height="100px"/>
                                            <Text text="{content}" />
                                            <Button text="{buttonText}" press="onButtonPress"/>
                                        </content>
                                    </Panel>
                                </VBox>
                            </CustomListItem>
                        </items>
                    </List>
                </items>
            </VBox>
        </content>
    </Page>
</core:FragmentDefinition>
